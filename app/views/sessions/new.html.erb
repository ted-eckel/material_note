<div class="wrapper">
  <div class="bar-header">
    <div class="logo-bar"></div>
  </div>
  <div id="container-boundingbox" class="wrapper">
    <div id="container" class="wrapper">
      <div class="main">
        <div class="MinimalFormFrame">
          <div class="heading">
            <div class="branding"></div>
              <h2>Sign In</h2>
          </div>
          <div class="minimal-wrapper">
            <div class="minimal-body">
              <div class="MinimalLoginForm">
                <div class="signin">
                  <form action="<%= session_url %>" method="post" name="login_form" class="minimal-form">
                    <%= auth_token_input %>
                    <div class="success-notification-light"></div>
                    <ol>
                      <li class="Row">
                        <div class="mdl-textfield mdl-js-textfield" id="row-form">
                          <input class="mdl-textfield__input" type="text" name="user[username]" value="">
                          <label class="mdl-textfield__label" for="username">Username</label>
                        </div>
                        <!-- <label for="username">Username</label>
                        <div id="email-wrapper">
                          <input maxlength="255" type="text" name="user[username]" value="" class="TextInput TextInput_large">
                        </div> -->
                      </li>
                      <li class="Row">
                        <div class="mdl-textfield mdl-js-textfield" id="row-form">
                          <input class="mdl-textfield__input" type="password" name="user[password]" value="">
                          <label class="mdl-textfield__label" for="password">Password</label>
                        </div>
                        <!-- <label for="password">Password</label>
                        <div id="password-wrapper">
                          <input maxlength="64" type="password" name="user[password]" value="" class="TextInput TextInput_large">
                        </div> -->
                      </li>
                      <li>
                        <button type="submit" value="Sign In"
                          class="mdl-button mdl-js-button mdl-button--raised
                            mdl-js-ripple-effect mdl-button--primary mdl-color-text--white
                            Btn Btn_emph Btn_super">
                            Sign In
                        </button>
                      </li>
                    </ol>
                  </form>
                </div>
              </div>
            </div>
          </div>
          <div id="context-switch">
            <div class="t-pico">Don't have an account?</div>
            <div class="switch">
              <%= link_to "Create account", new_user_url, id: "switch-form switch-link" %>
            </div>
          </div>
        </div>
      </div>
      <div class="footer-wrapper">
        <!-- copyright stuff -->
      </div>
    </div>
  </div>
</div>
